<!-- navigation -->
<nav class="navbar navbar-expand-lg navbar-custom">
    <div class="container-fluid">
        <!-- Updated navbar brand with custom styles -->
        <a class="navbar-brand navbar-brand-custom" href="#">TimePostit</a>
